import random 

def guess(): 
  if numb > y:
    print ('number was too big')
  else:
    print ('number was too small')

numb = random.randint(0, 20)
x = input('guess a number between 0- 20 --')
y = int(x)

while y != numb:
  guess()
  print('sorry my guess was ' + str(numb))
  number = input('guess again - ')
  y = int(number)
  
else:
  print('congrats your answer was correct !')


